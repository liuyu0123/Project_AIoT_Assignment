{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROS2: welaboat（实船）",
            "type": "ros2",
            "request": "launch",
            "target": "${workspaceFolder}/src/perception/launch/welaboat.launch.py",
            "env": {
                "ROS_DOMAIN_ID": "0"
            }
        },
        {
            "name": "ROS2: fillback（回灌）",
            "type": "ros2",
            "request": "launch",
            "target": "${workspaceFolder}/src/perception/launch/fillback.launch.py",
            "env": {
                "ROS_DOMAIN_ID": "0"
            }
        },
        {
            "name": "ROS2: 无人船测试-融合模块",
            "type": "ros2",
            "request": "attach",
        },
        {
            "name": "Python: merge_bag.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/merge_bag.py",
            "args": [
                "--base",
                "${input:baseBag}",
                "--replay",
                "${input:replayBag}",
                "--out",
                "${input:outBag}",
                "--override-topics",
                "/perception_v2/object",
                "/perception_v2/debug"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "ROS2 Debug",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/install/<your_package_name>/lib/<your_package_name>/<your_node_name>",
            "program": "/home/riba/GitProject/LIUYU/WelaBoat_ws/install/lidar_vision_fusion/lib/lidar_vision_fusion/lidar_vision_fusion",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "text": "set follow-fork-mode child"
                }
            ],
            "logging": {
                "moduleLoad": false,
                "trace": true
            }
        },
        {
            "name": "调试节点【千问】",
            "type": "cppdbg",
            "request": "attach",
            "program": "/home/riba/GitProject/LIUYU/WelaBoat_ws/install/lidar_vision_fusion/lib/lidar_vision_fusion/lidar_vision_fusion",
            // "program": " $ {workspaceFolder}/install/your_package/lib/your_package/your_node_name",
            "processId": " $ {command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "调试节点【python】",
            "type": "python",
            "request": "launch",
            // "program": "/home/riba/GitProject/LIUYU/WelaBoat_ws/install/lidar_vision_fusion/lib/lidar_vision_fusion/lidar_vision_fusion",
            "program": "/home/riba/GitProject/LIUYU/WelaBoat_ws/src/perception/lidar_vision_fusion/lidar_vision_fusion/lidar_vision_fusion_node.py",
        },
        {
            "name": "ros2 run 调试",
            "type": "python",
            "request": "launch",
            "program": "/opt/ros/humble/bin/ros2",
            "args": [
                "run",
                "lidar_vision_fusion",
                "lidar_vision_fusion"
            ],
            "env": {
                "AMENT_PREFIX_PATH": "${workspaceFolder}/install:${env:AMENT_PREFIX_PATH}",
                "PYTHONPATH": "${workspaceFolder}/install/lidar_vision_fusion/lib/python3.10/site-packages:${env:PYTHONPATH}"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}