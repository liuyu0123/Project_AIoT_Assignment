<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"> 
    <xacro:macro name="box_inertia" params="m d w h">
        <inertial>
            <mass value="${m}" />
            <inertia ixx="${m*(h*h+d*d)/12.0}" 
                     ixy="0" 
                     ixz="0" 
                     iyy="${m*(w*w+d*d)/12.0}" 
                     iyz="0" 
                     izz="${m*(w*w+h*h)/12.0}" 
            />
        </inertial>
    </xacro:macro>

    <xacro:macro name="cylinder_inertia" params="m r h">
        <inertial>
            <mass value="${m}" />
            <inertia ixx="${m*(3*r*r+h*h)/12.0}" 
                     ixy="0" 
                     ixz="0" 
                     iyy="${m*(3*r*r+h*h)/12.0}" 
                     iyz="0" 
                     izz="${m*r*r/2.0}" 
            />
        </inertial>
    </xacro:macro>

    <xacro:macro name="sphere_inertia" params="m r">
        <inertial>
            <mass value="${m}" />
            <inertia ixx="${m*r*r*2.0/5.0}" 
                     ixy="0" 
                     ixz="0" 
                     iyy="${m*r*r*2.0/5.0}" 
                     iyz="0" 
                     izz="${m*r*r*2.0/5.0}" 
            />
        </inertial>
    </xacro:macro>
</robot>